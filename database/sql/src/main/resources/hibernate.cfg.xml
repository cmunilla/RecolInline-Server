<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">recolinlineUser</property>
        <property name="hibernate.connection.password">recolinline</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/recolinline?useLegacyDatetimeCode=false&amp;serverTimezone=UTC</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="show_sql">true</property> 
        <property name="connection.pool_size">10</property> 
        <mapping class="cmssi.museum.dao.entity.Category"/>    
        <mapping class="cmssi.museum.dao.entity.CategoryEntry"/>  
        <mapping class="cmssi.museum.dao.entity.Contact"/>      
        <mapping class="cmssi.museum.dao.entity.Domain"/>    
        <mapping class="cmssi.museum.dao.entity.Field"/>    
        <mapping class="cmssi.museum.dao.entity.Frame"/>    
        <mapping class="cmssi.museum.dao.entity.Line"/>    
        <mapping class="cmssi.museum.dao.entity.Model"/>    
        <mapping class="cmssi.museum.dao.entity.Museum"/>    
        <mapping class="cmssi.museum.dao.entity.Operator"/>    
        <mapping class="cmssi.museum.dao.entity.Role"/>    
        <mapping class="cmssi.museum.dao.entity.Sheet"/>    
        <mapping class="cmssi.museum.dao.entity.Type"/>    
        <mapping class="cmssi.museum.dao.entity.User"/>    
        <mapping class="cmssi.museum.dao.entity.Visibility"/>    
    </session-factory>
</hibernate-configuration>